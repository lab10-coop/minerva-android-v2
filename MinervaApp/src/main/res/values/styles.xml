<resources>

    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:statusBarColor">@color/lightGray</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="popupMenuStyle">@style/ValuePopupMenu</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/lightGray</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBarTitleText</item>
        <item name="elevation">0dp</item>
        <item name="height">64dp</item>
    </style>

    <style name="AppTheme.ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FormTextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_color</item>
        <item name="boxStrokeWidth">@dimen/form_box_stroke_width</item>
        <item name="errorTextAppearance">@style/ErrorTextStyle</item>
        <item name="boxCornerRadiusTopStart">@dimen/rounded_background_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/rounded_background_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/rounded_background_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/rounded_background_small</item>
        <item name="android:textColorHint">@color/titleColor</item>
        <item name="android:layout_marginBottom">@dimen/margin_xsmall</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="EditTextInputLayoutStyle" parent="AppTheme">
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">255</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
    </style>

    <style name="ValuePopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_popup_menu_background</item>
        <item name="android:dropDownVerticalOffset">-40dp</item>
        <item name="android:dropDownHorizontalOffset">3dp</item>
    </style>

    <style name="AlertDialogMaterialTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AlertTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButton</item>
    </style>

    <style name="AlertButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="AlertTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="MinervaButtonStyle">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PurpleButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/MinervaButtonStyle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="cornerRadius">@dimen/rounded_background_small</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:theme">@style/MinervaButtonStyle</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="cornerRadius">@dimen/rounded_background_small</item>
    </style>

    <style name="BindedHeaderStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>
</resources>
