<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ownerAddress"
        android:layout_width="@dimen/address_width"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_regular"
        android:layout_centerVertical="true"
        android:textColor="@color/gray"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textSize="@dimen/text_normal"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginBottom="@dimen/margin_xsmall"
        tools:text="0x6583hf402294729402843405ng932" />

    <ImageView
        android:id="@+id/ownerRowMenu"
        android:layout_width="@dimen/clickable_area"
        android:layout_height="@dimen/clickable_area"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:scaleType="center"
        android:src="@drawable/ic_three_dots"
        tools:ignore="ContentDescription" />
</RelativeLayout>