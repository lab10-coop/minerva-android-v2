<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@color/lightGray" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/check_box_offset"
        android:left="@dimen/check_box_offset"
        android:right="@dimen/check_box_offset"
        android:top="@dimen/check_box_offset">
        <shape android:shape="oval">

            <padding
                android:bottom="32dp"
                android:left="32dp"
                android:right="32dp"
                android:top="32dp" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

</layer-list>